              <arguments>
                <argument>131.97.103.28</argument>
                <argument>10790</argument>
                <argument>cs-ws-s-GMD</argument>
                <argument>Qic89Nfa</argument>
                <argument>100</argument>
              </arguments>
            </configuration>
            <dependencies>
              <dependency>
                <groupId>com.volvo.jvs</groupId>
                <artifactId>check-jboss-up</artifactId>
                <version>1.0</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
    
    <profile>
      <id>test-nodebug</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.5.0</version>
            <executions>
              <execution>
                <id>restart-jboss-http-post</id>
                <phase>install</phase>
                <goals>
                  <goal>java</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <mainClass>com.volvo.jvs.RestartJBoss</mainClass>
              <arguments>
                <argument>jboss_url</argument>
                <argument>username</argument>
                <argument>password</argument>
                <argument>jboss_server_short</argument>
                <argument>dev</argument>
                <argument>${env.ENVIRONMENT}</argument>
              </arguments>
            </configuration>
            <dependencies>
              <dependency>
                <groupId>com.volvo.jvs</groupId>
                <artifactId>restart-jboss-http-post</artifactId>
                <version>1.0</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
    
    <profile>
      <id>test-debug</id>
